<UserControl x:Class="PR14.Elements.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PR14.Elements"
                      mc:Ignorable="d">
    <Grid Width="200">
        <Grid Margin="15,15,15,15" Background="#7FFFFFFF" Height="300" Width="170">
            <Image x:Name="image" Margin="-10,-10,-10,120" Stretch="UniformToFill" Source="/Image/background.jpg" />
            <Label x:Name="price" Content="3000 р." Margin="10,180,10,94" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontWeight="Bold" Foreground="Black" />
            <Label x:Name="name" Content="Наименование" Margin="10,208,10,66" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontWeight="Bold" Foreground="Black" />
            <Button Background="White" Content="-" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="30" Height="25" Margin="10,0,0,38"/>
            <TextBox x:Name="count" Text="0" Height="25" Margin="45,0,45,38" VerticalAlignment="Bottom" HorizontalContentAlignment="Center"
                 VerticalContentAlignment="Center" />
            <Button Background="White" Content="+" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="30" Height="25" Margin="0,0,10,38" />
            <Button Background="White" VerticalAlignment="Bottom" Content="В КОРИЗНУ" Margin="10,0,10,10" Height="25" />
        </Grid>
    </Grid>
</UserControl>
